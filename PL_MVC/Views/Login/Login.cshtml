@model ML.Usuario

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>CodePen - A Pen by Mohithpoojary</title>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.2.0/css/all.css'>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.2.0/css/fontawesome.css'>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/Content/LoginStyle.css">

</head>
<body>
    <div class="container">
        <div class="screen">
            <div class="screen__content">
                @*<form method="post" action="http://http://localhost:18338/Login/Login"  esta es otra forma de llamar al login pero con el form*@
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "login" }))
                {


                    <div class="login__field">
                        <i class="login__icon fas fa-user"></i>
                        <input type="text" class="login__input" placeholder="User name / Email" name="email">
                        @*@Html.LabelFor(model => model.Email, new { @class = "login_input", @placeholder = "Email", @style = "" });
                            @Html.TextBoxFor(model => model.Email, new { @class = "", @placeholder = "Email", @style = "" });*@
                    </div><div class="login__field">
                        <i class="login__icon fas fa-lock"></i>
                        @*@Html.LabelFor(model => model.Password, new { @class = "", @placeholder = "Contraseña", @style = "" });
                            @Html.TextBoxFor(model => model.Password, new { @class = "", @placeholder = "Contraseña", @style = "" });*@
                        <input type="password" class="login__input" placeholder="Password" name="password">
                    </div><button class="button login__submit">
                        <span class="button__text">Entrar</span>
                        <i class="button__icon fas fa-chevron-right"></i>
                    </button>
                }
                <div class="social-login">
                    <h3>log in via</h3>
                    <div class="social-icons">
                        <a href="#" class="social-login__icon fab fa-instagram"></a>
                        <a href="#" class="social-login__icon fab fa-facebook"></a>
                        <a href="#" class="social-login__icon fab fa-twitter"></a>
                    </div>
                </div>
            </div>
            <div class="screen__background">
                <span class="screen__background__shape screen__background__shape4"></span>
                <span class="screen__background__shape screen__background__shape3"></span>
                <span class="screen__background__shape screen__background__shape2"></span>
                <span class="screen__background__shape screen__background__shape1"></span>
            </div>
        </div>
    </div>
    <!-- partial -->
</body>
</html>
